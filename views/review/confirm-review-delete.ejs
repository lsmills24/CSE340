<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<p>Are you sure you want to delete this review? This cannot be undone.</p>

<form action="/review/delete" class="login_form" method="post">
    <div id="reg_form">
        <p><strong>Vehicle:</strong> <%= inv_year %> <%= inv_make %> <%= inv_model %></p>
        <p><strong>Review:</strong> <%= review_text %></p>
        <input type="hidden" name="review_id" value="<%= review_id %>">
    </div>
    <input type="submit" value="Delete Review">
</form>
<a href="/account/">Cancel</a>