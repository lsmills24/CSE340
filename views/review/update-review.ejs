<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<form action="/review/edit" class="login_form" method="post">
    <div id="reg_form">
        <input type="hidden" name="review_id" value="<%= review_id %>">
        <input type="hidden" name="account_id" value="<%= locals.accountData ? locals.accountData.account_id : '' %>">
        <label for="review_text">Edit Your Review:</label><br>
        <textarea id="review_text" name="review_text" rows="4" cols="50" required><%= review_text %></textarea><br>
    </div>
    <input type="submit" value="Update Review">
</form>
<a href="/account/">Cancel</a>