<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>


<%- messages() %>

<% if (errors) { %> <!-- Make sure to add "errors: null," in the invController when calling the function to build this page or it will crash -->
    <ul class="notice">
   <% errors.array().forEach(error => { %>  
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>


<form action="/inv/add-inventory" class="login_form" method="post">
    <div id="inv_form">        
        <label for="inv_make">Make:</label>
        <input type="text" id="inv_make" name="inv_make" required value="<%= locals.inv_make || '' %>"><br>

        <label for="inv_model">Model:</label>
        <input type="text" id="inv_model" name="inv_model" required value="<%= locals.inv_model || '' %>"><br>

        <label for="inv_year">Year:</label>
        <input type="number" id="inv_year" name="inv_year" pattern="^[0-9]{4}$" required placeholder="4-Digit Year" value="<%= locals.inv_year || '' %>"><br>

        <label for="inv_description">Description:</label>
        <textarea id="inv_description" name="inv_description" rows="4" cols="50" required><%= locals.inv_description || '' %></textarea><br>

        <label for="inv_image">Image:</label>
        <input type="text" id="inv_image" name="inv_image" placeholder="/images/vehicles/no-image.png" value="<%= locals.inv_image || '/images/vehicles/no-image.png' %>"><br>

        <label for="inv_thumbnail">Thumbnail Image:</label>
        <input type="text" id="inv_thumbnail" name="inv_thumbnail" placeholder="/images/vehicles/no-image-tn.png" value="<%= locals.inv_thumbnail || '/images/vehicles/no-image-tn.png' %>"><br>

        <label for="inv_price">Price (USD):</label>
        <input type="number" id="inv_price" name="inv_price" required value="<%= locals.inv_price || '' %>"><br>

        <label for="inv_miles">Mileage:</label>
        <input type="number" id="inv_miles" name="inv_miles" required value="<%= locals.inv_miles || '' %>"><br>

        <label for="inv_color">Color:</label>
        <input type="text" id="inv_color" name="inv_color" required value="<%= locals.inv_color || '' %>"><br>

        <label for="classification_id">Classification:</label>
        <%- classificationList %>
    </div>
    <input type="submit" value="Add">
</form>