<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>


<%- messages() %>

<% if (errors) { %> <!-- Make sure to add "errors: null," in the invController when calling the function to build this page or it will crash -->
    <ul class="notice">
   <% errors.array().forEach(error => { %>  
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>


<form action="/inv/delete/" id="deleteForm" class="login_form" method="post">
    <div id="inv_form">        
        <label for="inv_make">Make:</label>
        <input type="text" id="inv_make" name="inv_make" required value="<%= locals.inv_make %>" readonly><br>

        <label for="inv_model">Model:</label>
        <input type="text" id="inv_model" name="inv_model" required value="<%= locals.inv_model %>" readonly><br>

        <label for="inv_year">Year:</label>
        <input type="number" id="inv_year" name="inv_year" required placeholder="4-Digit Year" value="<%= locals.inv_year || '' %>" readonly><br>

        <label for="inv_price">Price (USD):</label>
        <input type="number" id="inv_price" name="inv_price" required value="<%= locals.inv_price || '' %>" readonly><br>
        <p id="delete-warning">*Confirm Deletion - This delete is permanent.</p>
    </div>
    <input type="submit" value="Delete Vehicle">
    <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %> readonly>
</form>